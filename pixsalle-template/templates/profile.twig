{% extends "base.twig" %}

{% block title %}Profile{% endblock %}

{% block content %}
    <h1>Welcome back!</h1>
    <form data-cy="user-data" action="{{ formAction }}" id="profile__form" method="POST">
        <label for="userName">Username:
            {% if allUser.userName == NULL %}
                <input data-cy="profile__userName" type="text" name="userName" value="user{{ userId }}">
            {% endif %}
            {% if allUser.userName %}
                <input data-cy="profile__userName" type="text" name="userName" value="{{ allUser.userName }}">
            {% endif %}
            {% if formErrors['userName'] %}
                <p data-cy="sign-up__wrongUserName">{{ formErrors['userName'] }}</p>
            {% endif %}

        </label><br>
        <label for="email">Email:
            <input data-cy="profile__email" type="text" name="email" value="{{ userEmail }}" disabled>
        </label><br>
        <label for="telNum">Telefon number:
            <input data-cy="profile__telefonNumber" type="text" placeholder="Enter your phone number"
                   name="phoneNumber" value="{{ allUser.phone }}">
        </label><br>
        {% if formErrors['phoneNumber'] %}
            <p data-cy="sign-up__wrongPhoneNumber">{{ formErrors['phoneNumber'] }}</p>
        {% endif %}
        <img src="" alt="Profile image"><br>
        <input data-cy="profile__btn" type="submit" value="Save Changes"><br>
        <a href="profile/changePassword">Change your password</a>
    </form>
{% endblock %}
