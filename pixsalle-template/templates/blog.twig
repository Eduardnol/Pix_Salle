{% extends "base.twig" %}

{% block title %}Sign-up | PixSalle{% endblock %}

{% block content %}
    <h1>Create a blog</h1>
    <form data-cy="blog" action="{{ formAction }}" method="POST">
        <input type="text" name="title" placeholder="Enter your title">

        <input type="text" name="comment" placeholder="Enter your comment">

        <input type="submit" value="Create">
    </form>
{% endblock %}