{% extends "base.twig" %}

{% block title %}Membership | PixSalle{% endblock %}

{% block content %}
    <link href="/css/membership.css" rel="stylesheet">

    <h1>Membership</h1>

    {% if actualMembership %}
        <p>You are an Active member</p>
    {% else %}
        <p>You are a Cool member</p>
    {% endif %}
    {{ error }}


    <form data-cy="sign-in" action="{{ formAction }}" method="POST">
        <div id="btn_containers">
            <input name="activate" type="submit" value="Activate" class="btn btn-primary">
            <input name="deactivate" type="submit" value="Deactivate" class="btn btn-primary">
        </div>
    </form>


    {% if formErrors['email'] %}
        <p style="color: red;" data-cy="sign-in__wrongEmail">{{ formErrors['email'] }}</p>
    {% endif %}
    {% if formErrors['password'] %}
        <p style="color: red;" data-cy="sign-in__wrongPassword">{{ formErrors['password'] }}</p>
    {% endif %}
{% endblock %}